    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/back"
            app:backgroundTint="#ffffff"
            app:fabSize="auto"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:rippleColor="@color/memo_add" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="500" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/delete_button"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/delete"
            app:backgroundTint="#ffffff"
            app:fabSize="auto"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:rippleColor="@color/memo_add" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/save_button"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:borderWidth="0dp"
            app:elevation="0dp"
            android:src="@drawable/save"
            app:backgroundTint="#ffffff"
            app:fabSize="auto"
            app:rippleColor="@color/memo_add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/memo_text_time"
            android:text="5月14日 下午6:00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/memo_text_ready"
            android:text="  |  "/>
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/memo_text_time"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/memo_text_time"
            android:text="字"/>
    </LinearLayout>
    <!-- 内容的EditText -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_todo_is_button"
        android:text="未完成"
        />
    <EditText
        android:id="@+id/edt_content"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="开始书写"
        android:textColorHint="@color/memo_text_ready"
        android:textColor="@color/memo_text"
        android:gravity="top"
        android:background="@null"
        android:textSize="36sp" />

</LinearLayout>